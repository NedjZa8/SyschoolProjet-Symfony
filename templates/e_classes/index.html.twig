{% extends 'base.ecole.html.twig' %}

{% block title %}Hello EClassesController!{% endblock %}

{% block body %}
    <h3 style="text-align: center">Classes</h3>

    <div class="card">
        <div class="card-body">
            <h3>Liste des classes</h3><a href="{{ path("ecole_classes_add")}}" class="btn btn-primary"> Ajouter Classe</a>

            <table class="table table-striped">
                <thead>
                <tr>
                    <td>ID</td>
                    <td>Nom</td>
                </tr>
                </thead>
                <tbody>
                {% for classe in mesClasses %}
                    <tr>
                        <td>
                            {{ classe.id }}
                        </td>
                        <td>
                            {{ classe.nom }}
                        </td>

                        <td>
                            <a href="" class="btn btn-info btn-sm">Editer</a>
                            <a href="" class="btn btn-danger btn-sm" >Supprimer</a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>
{% endblock %}
